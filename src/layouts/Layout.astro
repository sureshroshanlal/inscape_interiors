---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Inscape Interiors - Interior Design",
  description = "Inspired by art and nature, We design unique and elegant spaces that evoke creativity and calm.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;700&display=swap"
      rel="stylesheet"
    /> -->
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex flex-col bg-background font-sans font-light text-base"
  >
    <Header />
    <main class="flex-1">
      <slot />
      <WhatsAppButton />
    </main>
    <Footer />
    <!-- Global Image Zoom Modal -->
    <div
      id="image-zoom-modal"
      class="fixed inset-0 z-[9999] hidden items-center justify-center"
    >
      <div class="absolute inset-0 bg-black/90 backdrop-blur-sm"></div>

      <img
        id="zoomed-image"
        class="relative max-h-[90vh] max-w-[95vw] rounded-lg shadow-2xl scale-95 transition-transform duration-300"
        alt="Zoomed Image"
      />
    </div>

    <script>
      const modal = document.getElementById(
        "image-zoom-modal",
      ) as HTMLDivElement;
      const zoomedImage = document.getElementById(
        "zoomed-image",
      ) as HTMLImageElement;

      document.addEventListener("click", (e) => {
        const target = e.target as HTMLElement | null;
        if (!target) return;

        const img = target.closest("img[data-zoom]") as HTMLImageElement | null;
        if (!img) return;

        zoomedImage.src = img.src;
        modal.classList.remove("hidden");
        modal.classList.add("flex");

        requestAnimationFrame(() => {
          zoomedImage.classList.remove("scale-95");
          zoomedImage.classList.add("scale-100");
        });
      });

      modal.addEventListener("click", () => {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        zoomedImage.classList.add("scale-95");
        zoomedImage.classList.remove("scale-100");
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
          modal.classList.add("hidden");
          modal.classList.remove("flex");
        }
      });
    </script>
  </body>
</html>
