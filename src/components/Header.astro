          <!-- <li><a href="/studio55">Studio 55</a></li> -->
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>

      <!-- Logo -->
      <a href="/">
        <img src="/images/inscape_logo.webp" alt="Inscape Interiors" class="h-36 w-auto" />
