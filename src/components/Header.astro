<header class="top-0 left-0 w-full bg-background z-30">
  <div class="page-padding">
    <!-- Desktop Header -->
    <div class="hidden md:flex items-center justify-center py-6 relative">
      <!-- Left Vertical Nav -->
      <nav class="absolute left-0 top-1/2 -translate-y-1/2">
        <ul class="flex flex-col gap-1 text-[14px] font-light tracking-wide">
