---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact â€” Inscape Interiors">
  <section class="w-full py-section">
    <div
      class="max-w-[1240px] mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16"
    >
      <!-- Left: Image -->
      <div class="overflow-hidden hidden md:block fade-in-element opacity-0">
        <img
          src="/images/interiors-side.jpg"
          alt="Inscape Interiors Interior"
          class="w-full h-full object-cover"
          width="777"
          height="1024"
          loading="eager"
          decoding="async"
        />
      </div>

      <!-- Right: Contact form & details -->
      <div class="flex flex-col justify-center">
        <h1
          class="text-[42px] md:text-[56px] font-light leading-tight mb-8 font-serif text-hyperlink fade-in-element opacity-0"
        >
          Contact
        </h1>

        <div class="space-y-2 mb-10 fade-in-element opacity-0">
          <p class="text-base md:text-lg text-hyperlink">Address Line 1</p>
          <p class="text-base md:text-lg text-hyperlink">
            Inscape Interiors Ltd
          </p>
          <p class="text-base md:text-lg text-hyperlink">Address Line 2</p>
          <p class="text-base md:text-lg text-hyperlink">Address Line 3</p>
        </div>

        <form
          class="space-y-6 fade-in-element opacity-0"
          action="#"
          method="post"
        >
          <!-- Name -->
          <div>
            <label
              for="name"
              class="text-sm uppercase tracking-widest text-hyperlink block mb-2"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
              placeholder="Your name"
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="text-sm uppercase tracking-widest text-hyperlink block mb-2"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
              placeholder="Your email"
            />
          </div>

          <!-- Phone -->
          <div>
            <label
              for="phone"
              class="text-sm uppercase tracking-widest text-hyperlink block mb-2"
              >Phone</label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
              placeholder="Your phone number"
            />
          </div>

          <!-- Enquiry -->
          <div>
            <label
              for="enquiry"
              class="text-sm uppercase tracking-widest text-hyperlink block mb-2"
              >Enquiry</label
            >
            <textarea
              id="enquiry"
              name="enquiry"
              rows="5"
              required
              class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink focus:outline-none focus:border-[#301804] transition-colors resize-none placeholder:text-[#301804]/40"
              placeholder="Tell us about your project..."></textarea>
          </div>

          <!-- Submit -->
          <div class="pt-4">
            <button
              type="submit"
              class="inline-block px-8 py-3 bg-[#301804] text-[#EEECE3] rounded-full hover:bg-[#EEECE3] hover:text-[#301804] transition-colors duration-300"
            >
              Send Enquiry
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  .fade-in-element {
    transition:
      opacity 1.2s ease-out,
      transform 1.2s ease-out;
    transform: translateY(20px);
  }

  .fade-in-element.visible {
    opacity: 1 !important;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add("visible");
          }, index * 200);
        }
      });
    },
    { threshold: 0.2 },
  );

  document.querySelectorAll(".fade-in-element").forEach((el) => {
    observer.observe(el);
  });
</script>
