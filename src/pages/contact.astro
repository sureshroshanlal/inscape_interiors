---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact â€” Inscape Interiors">
  <section class="page-padding py-section">
    <div
      class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16"
    >
      <!-- Left: Image -->
      <div class="overflow-hidden hidden md:block">
        <img
          src="/images/interiors-side.jpg"
          alt="Inscape Interiors Interior"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Right: Contact form & details -->
      <div class="flex flex-col justify-center">
        <h1 class="heading-lg mb-8">Contact</h1>

        <div class="space-y-2 mb-10">
          <p class="body-text">Address Line 1</p>
          <p class="body-text">Inscape Interiors Ltd</p>
          <p class="body-text">Address Line 2</p>
          <p class="body-text">Address Line 3</p>
        </div>

        <form class="space-y-6" action="#" method="post">
          <!-- Name -->
          <div>
            <label for="name" class="label-text block mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-transparent border-b border-brown-300 pb-2 font-sans text-sm text-brown-800 focus:outline-none focus:border-brown-700 transition-colors placeholder:text-brown-300"
              placeholder="Your name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="label-text block mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border-b border-brown-300 pb-2 font-sans text-sm text-brown-800 focus:outline-none focus:border-brown-700 transition-colors placeholder:text-brown-300"
              placeholder="Your email"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="label-text block mb-2">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full bg-transparent border-b border-brown-300 pb-2 font-sans text-sm text-brown-800 focus:outline-none focus:border-brown-700 transition-colors placeholder:text-brown-300"
              placeholder="Your phone number"
            />
          </div>

          <!-- Enquiry -->
          <div>
            <label for="enquiry" class="label-text block mb-2">Enquiry</label>
            <textarea
              id="enquiry"
              name="enquiry"
              rows="5"
              required
              class="w-full bg-transparent border-b border-brown-300 pb-2 font-sans text-sm text-brown-800 focus:outline-none focus:border-brown-700 transition-colors resize-none placeholder:text-brown-300"
              placeholder="Tell us about your project..."></textarea>
          </div>

          <!-- Submit -->
          <div class="pt-4">
            <button
              type="submit"
              class="label-text bg-transparent border border-brown-400 px-8 py-3 hover:bg-brown-900 hover:text-cream hover:border-brown-900 transition-all duration-300"
            >
              Send Enquiry
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
