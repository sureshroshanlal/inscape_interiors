---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Newsletter â€” Inscape Interiors">
  <section class="w-full py-section">
    <div class="max-w-xl mx-auto text-center">
      <h1
        class="text-[42px] md:text-[56px] font-light leading-tight mb-6 font-serif text-hyperlink fade-in-element opacity-0 max-w-[600px] mx-auto"
      >
        Newsletter
      </h1>

      <p
        class="text-base md:text-lg text-hyperlink mb-10 fade-in-element opacity-0"
      >
        Stay up to date with Tasha's latest projects, ceramics, and Studio 55
        events.
      </p>

      <form
        class="space-y-6 fade-in-element opacity-0"
        action="#"
        method="post"
      >
        <div>
          <input
            type="text"
            name="first_name"
            required
            class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink text-center focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
            placeholder="First Name"
          />
        </div>
        <div>
          <input
            type="text"
            name="last_name"
            required
            class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink text-center focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
            placeholder="Last Name"
          />
        </div>
        <div>
          <input
            type="email"
            name="email"
            required
            class="w-full bg-transparent border-b border-[#301804]/30 pb-2 text-sm text-hyperlink text-center focus:outline-none focus:border-[#301804] transition-colors placeholder:text-[#301804]/40"
            placeholder="Email Address"
          />
        </div>
        <div class="pt-4">
          <button
            type="submit"
            class="inline-block px-8 py-3 bg-[#EEECE3] text-[#301804] rounded-full hover:bg-[#301804] hover:text-[#EEECE3] transition-colors duration-300"
          >
            Subscribe
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>

<style>
  .fade-in-element {
    transition:
      opacity 1.2s ease-out,
      transform 1.2s ease-out;
    transform: translateY(20px);
  }

  .fade-in-element.visible {
    opacity: 1 !important;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add("visible");
          }, index * 200);
        }
      });
    },
    { threshold: 0.2 },
  );

  document.querySelectorAll(".fade-in-element").forEach((el) => {
    observer.observe(el);
  });
</script>
